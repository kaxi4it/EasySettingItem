<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.easy.easysettingitem.MainActivity">

    <TextView
        android:text="Hello World!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.guyj.EasySettingItem
        android:id="@+id/list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#aaaaaa"
        android:padding="10dp"
        android:gravity="center_vertical"
        app:iconResID="@mipmap/ic_launcher"
        app:textContent="icon左，arrow右，cb是单选，需要显示就填ResID,不需要显示就不填写"
        app:textMarginTop="10dp"
        app:textMarginLeft="10dp"
        app:textMarginBottom="10dp"
        app:textMarginRight="10dp"
        app:textColor="#111111"
        app:textSize="14sp"
        app:arrowResID="@mipmap/ic_launcher"
        app:cbDrawableResID="@drawable/checkbox_bg"
        app:isChecked="false"
        />


</LinearLayout>
